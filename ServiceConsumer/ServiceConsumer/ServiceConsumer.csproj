<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="a4328d_DirectLibrary_A" Version="1.0.0" />
      <!-- By upgrading Direct B 👇 we have changed/broken behavior of Direct A 👆 because they share the same transitive library which differs in version -->
      <!-- There was no warning and we did not even realize that Direct B has anything to do with Direct A -->
      <PackageReference Include="a4328d_DirectLibrary_B" Version="2.0.0" />
    </ItemGroup>

</Project>
